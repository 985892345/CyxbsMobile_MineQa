    <include
        android:id="@+id/store_toolbar_store_product_detail"
        layout="@layout/common_toolbar" />
    <TextView
        android:id="@+id/store_tv_product_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="详细"
        android:textColor="@color/common_level_two_font_color"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <View-->
<!--        android:id="@+id/mine_store_product_detail_line1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:background="@drawable/mine_shape_divide_line"-->
<!--        app:layout_constraintTop_toBottomOf="@id/mine_store_tv_product_detail_title" />-->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/store_vp_product_image"
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_tv_product_detail_title" />

    <com.mredrock.cyxbs.store.utils.widget.EventIndicatorView
        android:id="@+id/store_image_indicator"
        android:layout_width="200dp"
        android:layout_height="15dp"
        app:underColor="@color/store_indicator_under"
        app:topColor="@color/store_stamp_detail_increase_count"
        app:layout_constraintBottom_toTopOf="@id/store_tv_product_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_vp_product_image" />

    <TextView
        android:id="@+id/store_tv_product_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="商品名称："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_vp_product_image" />

    <TextView
        android:id="@+id/store_tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:text="11111"
        app:layout_constraintLeft_toRightOf="@id/store_tv_product_name_title"
        app:layout_constraintTop_toBottomOf="@+id/store_vp_product_image" />

    <TextView
        android:id="@+id/store_tv_product_describe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="商品描述："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_tv_product_name_title" />

    <TextView
        android:id="@+id/store_tv_product_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:text="11111"
        app:layout_constraintLeft_toRightOf="@id/store_tv_product_describe_title"
        app:layout_constraintTop_toBottomOf="@+id/store_tv_product_name_title" />

    <TextView
        android:id="@+id/store_tv_product_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="商品描述："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_tv_product_describe_title" />

    <TextView
        android:id="@+id/store_tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:text="11111"
        app:layout_constraintLeft_toRightOf="@id/store_tv_product_price_title"
        app:layout_constraintTop_toBottomOf="@+id/store_tv_product_describe_title" />

    <TextView
        android:id="@+id/store_tv_product_prescription_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="持续时间："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_tv_product_price_title" />

    <TextView
        android:id="@+id/store_tv_product_prescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:text="11111"
        app:layout_constraintLeft_toRightOf="@id/store_tv_product_prescription_title"
        app:layout_constraintTop_toBottomOf="@+id/store_tv_product_price_title" />

    <View
        android:id="@+id/store_product_detail_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/store_shape_divide_line"
        app:layout_constraintBottom_toTopOf="@+id/store_product_detail_line3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/store_iv_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/common_default_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_product_detail_line2" />

    <TextView
        android:id="@+id/store_tv_user_balance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="余额："
        app:layout_constraintBottom_toTopOf="@+id/store_product_detail_line3"
        app:layout_constraintLeft_toRightOf="@+id/store_iv_stamp"
        app:layout_constraintTop_toBottomOf="@+id/store_product_detail_line2" />

    <TextView
        android:id="@+id/store_tv_user_stamp_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="666邮票"
        app:layout_constraintBottom_toTopOf="@+id/store_product_detail_line3"
        app:layout_constraintLeft_toRightOf="@+id/store_tv_user_balance_title"
        app:layout_constraintTop_toBottomOf="@+id/store_product_detail_line2" />

    <Button
        android:id="@+id/store_btn_exchange"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/common_dialog_btn_positive_blue"
        android:textColor="@color/common_white_font_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/store_product_detail_line3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_product_detail_line2" />

    <View
        android:id="@+id/store_product_detail_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/store_shape_divide_line"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>